Bootstrap: docker
From: pytorch/pytorch:2.3.1-cuda12.1-cudnn8-runtime

%post
    apt-get -y update
    apt-get -y upgrade
    apt-get -y autoremove --purge
    apt-get -y clean

%test
    python -c 'import torch; print("PyTorch version: " + torch.__version__)'

%runscript
    python

%help
    Ubuntu 22.04 with PyTorch 2.3.1.
