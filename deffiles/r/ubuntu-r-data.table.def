Bootstrap: docker
From: rocker/r-ver:latest

%post
    apt-get -y update
    apt-get -y upgrade
    apt-get -y autoremove --purge
    apt-get -y clean

    Rscript -e 'install.packages("data.table")'

%test
    R --version

%environment
    export LC_ALL=C

%runscript
    R

%help
    Ubuntu with latest version of R linked to OpenBLAS and data.table package installed.
